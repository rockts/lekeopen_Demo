<scroll-view
  scroll-y="{{ true }}"
  style="height: 180px"
  scroll-into-view="{{ currentView }}"
  scroll-with-animation="{{ true }}"
  >
  <view class="view-container">
    <view id="red" class="red" hover-class="light">
      <text>1</text>
    </view>
    <view id="yellow" class="yellow" hover-class="light">
      <text>2</text>
    </view>
    <view id="blue" class="blue" hover-class="light">
      <text>3</text>
    </view>
  </view>
</scroll-view>

<button data-view="red"  bindtap="setScrollView">red</button>
<button data-view="yellow"  bindtap="setScrollView">yellow</button>
<button data-view="blue"  bindtap="setScrollView">blue</button>
