/* pages/wxml/wxml.wxss */
button {
  margin: 8px;
  }
.red {
  background: #db2828;
}

.yellow {
  background: #fbbd08;
}

.blue {
  background: #2185d0;
}

.light {
  opacity: 0.85;
}

.view-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 180vh;
}

.view-container view {
  width: 100%;
  height: 100%;
}

.view-container text {
  color: #ffffff;
  padding: 16px;
  display: block;
  font-size: 32px;
}
